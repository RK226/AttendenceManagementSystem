@model IEnumerable<BusinessEntity.StudentEntity>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="../../Content/custom.css" rel="stylesheet" type="text/css" />
</head>

<div class="container">
    <div class="navbar-header" style="margin-top: 22px; margin-bottom: 33px; ">
        @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
</div>


<div class="tbl-header">Student Attendence</div>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table id="table">
        <tr class="head">
            <th>
                Roll No
            </th>
            <th>
                Student Name
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RollNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    <input id="chk" type="checkbox" name="Fruit" value="chk" checked="Selected" />
                </td>


                <td>

                    @*<a href='@Url.Action("Edit", "UserDetailsMasters",new { id = item.Id })' class="btn btn-primary">EDIT</a>
                        <a href='@Url.Action("Delete", "UserDetailsMasters",new { id = item.Id })' class="btn btn-danger">DELETE</a>*@
                </td>
            </tr>
        }


    </table>

    <div class="pull-right" style="font-size:xx-large; margin-right:100px">
        <input type="submit" value="Create" class="btn btn-primary btn-sm btn-block" />
    </div>

}