@model IEnumerable<BusinessEntity.SectionEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="../../Content/custom.css" rel="stylesheet" type="text/css" />
</head>

<div class="container">
    <div class="navbar-header" style="margin-top: 22px; margin-bottom: 33px; ">
        @Html.ActionLink("Create New", "CreateSection", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
</div>

<div class="tbl-header">Section Master</div>
<br />

<table id="table">
    <tr class="head">
        <th>
            @Html.DisplayNameFor(model => model.SectionName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SectionName)
            </td>

            <td>
                <a href='@Url.Action("UpdateSection", "Section",new { id = item.Id })' class="btn btn-primary">EDIT</a>
                <a href='@Url.Action("Delete", "Section",new { id = item.Id })' class="btn btn-danger">DELETE</a>
            </td>
        </tr>
    }

</table>
