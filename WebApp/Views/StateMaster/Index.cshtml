@model IEnumerable<BusinessEntity.StateMasterEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="../../Content/custom.css" rel="stylesheet" type="text/css" />
</head>
<div class="container">
    <div class="navbar-header" style="margin-top: 22px; margin-bottom: 33px; ">
        @Html.ActionLink("Create New", "CreateState", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
</div>

<div class="tbl-header">State Master</div>
<table id="table">
    <tr class="head">
        <th>
            @Html.DisplayNameFor(model => model.StateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryMaster.CountryName)
        </th>

        <th>
            <label for="action">Action</label>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryMaster.CountryName)
            </td>

            <td>
                <a href='@Url.Action("UpdateState", "StateMaster",new { id = item.Id })' class="btn btn-primary">EDIT</a>
                <a href='@Url.Action("Delete", "StateMaster",new { id = item.Id })' class="btn btn-danger">DELETE</a>
            </td>
        </tr>
    }

</table>
