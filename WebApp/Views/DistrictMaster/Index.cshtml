@model IEnumerable<BusinessEntity.DistrictMasterEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="../../Content/custom.css" rel="stylesheet" type="text/css" />
</head>
<div class="container">
    <div class="navbar-header" style="margin-top: 22px; margin-bottom: 33px; ">
        @Html.ActionLink("Create New", "CreateDistricts", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
    </div>
</div>



<div class="tbl-header">District Master</div>
<br />
<table id="table">
    <tr class="head">
        <th>
            @Html.DisplayNameFor(model => model.DistrictName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StateMaster.StateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryMaster.CountryName)
        </th>

        <th>
            <label for="action">Action</label>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateMaster.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryMaster.CountryName)
            </td>

            <td>
                <a href='@Url.Action("UpdateDistricts", "DistrictMaster",new { id = item.Id })' class="btn btn-primary">EDIT</a>
                <a href='@Url.Action("Delete", "DistrictMaster",new { id = item.Id })' class="btn btn-danger">DELETE</a>
              
            </td>
        </tr>
    }

</table>
