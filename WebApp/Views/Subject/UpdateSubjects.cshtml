@model DataModel.SubjectMaster

@{
    ViewBag.Title = "UpdateSubjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateSubjects</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="container-fluid" style="background: #fff">
            <div style="margin-top: 5px">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="../../DashBoard.aspx"><span class="fa fa-home"></span>HOME</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a><span class="fa fa-print"></span>Subject List</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <strong>Update Subject</strong>
                    </li>
                </ol>
            </div>
        </div>

    <div class="container">
        <div class="panel panel-info" style="margin-top: 0px; ">
            <div class="tbl-header">Subject Master</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Select Section<span style="color: red"> * </span></label>
                            @Html.DropDownList("SectionId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SectionId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="">Select Branch<span style="color: red"> * </span></label>
                            @Html.DropDownList("BranchId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="">Subjetc No.<span style="color: red"> * </span></label>
                            @Html.EditorFor(model => model.SubjectNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SubjectNo, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Select Department<span style="color: red"> * </span></label>
                            @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="">Select Standard<span style="color: red"> * </span></label>
                            @Html.DropDownList("StandardId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StandardId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="">Subjetc Name<span style="color: red"> * </span></label>
                            @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group pull-right">
                        <input type="submit" value="UPDATE" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
