@model DataModel.DeparmentMaster

@{
    ViewBag.Title = "UpdateDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <link href="../../Content/custom.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - K.S.K.W.College Nashik</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid" style="background: #fff">
        <div style="margin-top: 5px">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="../../DashBoard.aspx"><span class="fa fa-home"></span>HOME</a>
                </li>
                <li class="breadcrumb-item">
                    <a><span class="fa fa-print"></span>Section List</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Update Department</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="container">
        <div class="panel panel-info" style="margin-top: 0px; ">
            <div class="tbl-header">Department Master</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4 col-lg-offset-4">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label for="">Department Name<span style="color: red"> * </span></label>
                            @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="">Select College<span style="color: red"> * </span></label>
                            @Html.DropDownListFor(model => model.CollegeId, ViewBag.CollegeId as SelectList, "Select College", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="">Select Section <span style="color: red"> * </span></label>
                            @Html.DropDownListFor(model => model.SectionId, ViewBag.SectionId as SelectList, "Select Section", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="">Select Branch<span style="color: red"> * </span></label>
                            @Html.DropDownListFor(model => model.BranchId, ViewBag.BranchId as SelectList, "Select Branch", new { @class = "form-control" })
                        </div>


                        <div class="form-group pull-right">
                            <input type="submit" value="UPDATE" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
